<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bailey.rod.kotlinnewsreader">

    <uses-permission android:name="android.permission.INTERNET"/>

    <!--
    Allows Glide to monitor connectivity status and restart failed requests if users go from a
    a disconnected to a connected network state.
    -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".newsassetlist.view.NewsAssetListActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".newsasset.NewsAssetActivity_">
            <!-- Results in <- Back button automatically appearing in action bar -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".newsassetlist.view.NewsAssetListActivity_"/>
        </activity>
    </application>

</manifest>